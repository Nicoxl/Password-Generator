<Window x:Class="Password_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Generator"
        mc:Ignorable="d"
        Title="Password Generator" Height="550" Width="900" Icon="icon.ico" ResizeMode="NoResize"
        UseLayoutRounding="True"      
        SnapsToDevicePixels="True">
    <Window.Resources>
        <SolidColorBrush x:Key="NeonCyanBrush" Color="#00E5FF"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1E1E24"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#E0E0E0"/>
        <Style TargetType="Button" x:Key="StandardButtonStyle">
            <Setter Property="Background" Value="#33333D"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="1" BorderBrush="#44444F">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404050"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="NeonButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{StaticResource NeonCyanBrush}" 
                            BorderThickness="2" 
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource NeonCyanBrush}"/>
                                <Setter Property="Foreground" Value="#121212"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#0F121A" Offset="0.0"/>
            <GradientStop Color="#1A1C25" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20,20,20,26">
        <Border Background="{StaticResource PanelBackgroundBrush}" CornerRadius="15" Padding="25" VerticalAlignment="Center" Height="488">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel Margin="0,0,0,-19">
                <TextBlock Text="GENERATORE DI PASSWORD" 
                       Foreground="{StaticResource NeonCyanBrush}"
                       FontFamily="Consolas, Courier New, monospace"
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,25" 
                       />

                <TextBlock Text="La tua password:" Margin="0,0,0,5" Foreground="Gray" FontFamily="Consolas"/>
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Name="txtPassword" Grid.Column="0"
                         Background="#111116" Foreground="{StaticResource NeonCyanBrush}"
                         BorderBrush="#33333D" BorderThickness="1"
                         FontSize="18" Padding="10" FontFamily="Consolas"
                         IsReadOnly="True" Text="Clicca su genera password per ottenere una password..."
                         VerticalContentAlignment="Center" Margin="0,0,64,0">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button Name="btnCopia" 
                        Content="COPIA" Margin="746,0,0,0"
                        Style="{StaticResource StandardButtonStyle}"
                        Click="BtnCopia_Click"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Lunghezza:" Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Name="txtValoreSlider" Text="12" Foreground="{StaticResource NeonCyanBrush}" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                </StackPanel>

                <Slider Name="sldLunghezza" 
                    Minimum="6" Maximum="50" Value="12" 
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Margin="0,5,0,20"
                    ValueChanged="SldLunghezza_ValueChanged"/>

                <CheckBox Name="chkMaiuscole" Content="Includi Maiuscole [A-Z]" Foreground="{StaticResource LightTextBrush}" Margin="0,10,0,0" FontSize="14"/>
                <CheckBox Name="chkNumeri" Content="Includi Cifre [0-9]" Foreground="{StaticResource LightTextBrush}" Margin="0,10,0,0" FontSize="14"/>
                <CheckBox Name="chkSimboli" Content="Includi Caratteri Speciali [!@#]" Foreground="{StaticResource LightTextBrush}" Margin="0,10,0,0" FontSize="14"/>
                <CheckBox Name="chkAmbigui" Content="Escludi Caratteri Ambigui [il1Lo0O]" Foreground="{StaticResource LightTextBrush}" Margin="0,10,0,0" FontSize="14"/>
                <Button Name="btnGenera" 
                    Content="GENERA PASSWORD" 
                    Height="55" Margin="0,35,0,0" 
                    Style="{StaticResource NeonButtonStyle}"
                    Click="BtnGenera_Click"/>
                <TextBlock Name="txtInfo" 
                       Text="Password Generator 0.2 - Powered by Nicola Benetti ©" 
                       Foreground="{StaticResource LightTextBrush}"
                       FontWeight="Bold" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,10"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
